<!-- views/edit-pelanggan.ejs -->
<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Pelanggan - UKM Newci</title>
    <link rel="stylesheet" href="css/edit-pelanggan.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap');

* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    font-family: 'Poppins', sans-serif;
}

body {
    background-color: #f0f0f0;
}

header {
    background-color: #6a8db1;
    padding: 20px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    text-align: center;
}

header h1 {
    color: #333;
    font-size: 24px;
}

.sidebar {
    background: linear-gradient(to top, #333, black);
    color: #fff;
    width: 250px;
    position: fixed;
    top: 76px;
    left: 0;
    height: calc(100% - 70px);
    padding-top: 20px;
}

.sidebar ul {
    list-style-type: none;
    padding: 0;
}

.sidebar ul li {
    padding: 10px 20px;
}

.sidebar ul li a {
    color: #fff;
    text-decoration: none;
    display: block;
}

.sidebar ul li a:hover {
    background-color: #555;
}

main {
    margin-left: 270px;
    padding: 20px;
}

main h2 {
    color: #333;
    margin-bottom: 20px;
}

form {
    background-color: #f9f9f9;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

form label {
    display: block;
    margin: 10px 0 5px;
    font-weight: bold;
}

form input[type="text"] {
    width: 100%;
    padding: 8px;
    margin-bottom: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
}

form button {
    padding: 10px 20px;
    background-color: #4CAF50;
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

form button:hover {
    background-color: #45a049;
}
    </style>
</head>
<body>
    <header>
        <h1>Edit Pelanggan</h1>
    </header>
    <div class="sidebar">
        <ul>
            <li><a href="/dashboard">Dashboard</a></li>
            <li><a href="/kelola-mesin-cuci">Kelola Mesin Cuci</a></li>
            <li><a href="/kelola-pelanggan">Kelola Pelanggan</a></li>
            <li><a href="/laporan">Laporan Pendapatan</a></li>
        </ul>
    </div>
    <main>
        <h2>Edit Data Pelanggan</h2>
        <form action="/edit-pelanggan/<%= pelanggan.namaP %>" method="POST">
            <label for="namaP">Nama:</label>
            <input type="text" id="namaP" name="namaP" value="<%= pelanggan.namaP %>" required><br><br>
            <label for="noHP">No HP:</label>
            <input type="text" id="noHP" name="noHP" value="<%= pelanggan.noHP %>" required><br><br>
            <label for="alamat">Alamat:</label>
            <input type="text" id="alamat" name="alamat" value="<%= pelanggan.alamat %>" required><br><br>
            <label for="idKel">Kelurahan:</label>
            <select id="idKel" name="idKel" required>
                <% kelurahan.forEach(kel => { %>
                    <option value="<%= kel.idKel %>" <%= pelanggan.idKel === kel.idKel ? 'selected' : '' %>><%= kel.namaKel %></option>
                <% }); %>
            </select><br><br>
            <button type="submit">Simpan Perubahan</button>
        </form>
    </main>
</body>
</html>
